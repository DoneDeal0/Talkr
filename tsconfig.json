{
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
}
